doctype html
html(lang="en", id="ng-app", ng-app="nest")
	head
		meta(charset='utf8')
		meta(name="viewport", content="initial-scale=1, maximum-scale=1")

		// SEO
		meta(name="robots", content="noindex")
		title Nest

	body
		#main
			button(ng-click="runScript('createGithubOperations')") Create initial github search operations

		aside#scripts
			script(src='/socket.io/socket.io.js')

			script(src='/bower_components/angular/angular.min.js')
			script(src='/bower_components/angular-cookies/angular-cookies.min.js')
			script(src='/bower_components/angular-resource/angular-resource.min.js')
			script(src='/bower_components/angular-sanitize/angular-sanitize.min.js')
			script(src='/bower_components/angular-ui-router/release/angular-ui-router.min.js')

			script(src="/index.js")
